using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class movingUpNDown : MonoBehaviour {

   

    //This is the primative way I had set up before. Basic but can "work" if something goes wrong

     public float topLimit = 2.5f;
     public float bottomLimit = 1.0f;
     public float speed = 2.0f;

     public int direction = 1;

     public Vector3 movement;

     void Update()
     {
         if (transform.position.y - transform.parent.transform.position.y >= topLimit)
         {
             direction = -1;


         }
         else if (transform.position.y - transform.parent.transform.position.y <= bottomLimit)
         {
             direction = 1;
         }
         movement = Vector3.up * direction * speed * Time.deltaTime;
         gameObject.transform.Translate(movement);
     }
}
